<div id="map" style="width: 100%; height: 95vh;"></div>

<div class="nomad-count">
  <%=  %>
  NOMADS WORLDWIDE
</div>

<div class="container padded-top">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-4 col-xs-12">
        <p>
          <%= link_to new_nomad_path, class: 'btn btn-warning' do %>
            <i class="fa fa-plus"></i> 1. Add yourself on the map!
          <% end %>
        </p>
      </div>
      <div class="col-md-8 col-xs-12">
        <%= link_to 'https://chrome.google.com/webstore/detail/french-digital-nomads-map/aaokjnbicmobnkgjnmbmffbnldebhgfa', class: 'btn btn-primary', target: '_blank' do %>
          <i class="fa fa-chrome" aria-hidden="true"></i> 2. Download the chrome extension to update your location automatically
        <% end %>
      </div>



    </div>
  </div>
</div>

<!-- MAPS SCRIPT -->
<% content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ provider: { scrollwheel: false, zoomcontrol: true,
      draggable: true }, internal: { id: 'map' } }, function() {

        markers = handler.addMarkers(<%= raw @nomads_location.to_json %>);

        handler.bounds.extendWith(markers);
        handler.map.centerOn(<%= raw @center_point.to_json %>);
        handler.getMap().setZoom(12);
        // handler.fitMapToBounds();
        // if (markers.length == 0) {
        //   handler.getMap().setZoom(2);
        // } else if (markers.length == 1) {
        //   handler.getMap().setZoom(14);
        // }

      });
    });
  </script>
<% end %>
