<div class="mynavbar mynavbar-fixed">
  <div class="navbar-container" id="brand-container">
      <span> <%= link_to 'nomadmap', root_path, id: 'brand-nabar' %> </span>
  </div>

  <div class="navbar-container">
    <%= link_to t('navbar.map'), nomads_path, class: "hidden-xs hidden-sm" %>
    <%= link_to t('navbar.about'), about_path, class: "hidden-xs hidden-sm" %>
    <%= link_to t('navbar.auto_update'), auto_update_path, class: "hidden-xs hidden-sm" %>
  </div>


  <% if !!current_nomad %>

<!-- IF CURRENT NOMAD -->
    <div class="navbar-container" id="avatar-container">
      <%= image_tag avatar_url, id: 'avatar-home', class: 'pointer avatar-small' %>
    </div>

    <div class="navbar-container pos-relative">
      <div class="devise-container pos-absolute">
        <%= link_to t('navbar.map'), nomads_path %>
        <%= link_to t('navbar.edit_profile'), edit_nomad_path(current_nomad) %>
        <%= link_to t('navbar.change_password'), edit_nomad_registration_path %>
        <%= link_to t('navbar.logout'), destroy_nomad_session_path, method: :delete %>
      </div>
    </div>

  <% else %>
<!-- IF NOT -->
    <div class="navbar-container">
      <%= link_to t('navbar.sign_in'), new_nomad_session_path %>
    </div>

<!-- END -->
  <% end %>

</div>
