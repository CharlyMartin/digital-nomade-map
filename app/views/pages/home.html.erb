<div class="container-fluid no-padding">

<!-- VIEW 1 -->
  <div class="row">
    <div class="col-xs-12 no-padding">
      <div class="landing-banner" style="background-image:
        linear-gradient(to left, rgba(244, 231, 110, 0.95), rgba(143, 247, 167, 0.95)),
        url(<%= asset_path "landing.jpg" %>);">

        <div class="brand-container">
          <h2 id="brand-home"> <%= t('pages.home.brand') %> </h2>
          <h1 id="tagline"> <%= t('pages.home.tagline') %> </h1>
        </div>

        <div class="cta-container">
          <span class="box-shadow" id="cta"> <%= t('pages.home.cta') %> </span>
        </div>

        <div class="scroll-down-container">
          <p class="scroll-down pointer"> <%= t('pages.home.scroll_down') %> </p>
          <i class="fa fa-angle-down pointer" aria-hidden="true"></i>
        </div>

      </div>
    </div>
  </div>

<!-- VIEW 2 -->
  <div class="row">
    <div class="col-xs-12 col no-padding">
      <div class="form-banner" id="here">

        <div class="typed-js-container">
          <p class="typed-js-element"></p>
        </div>

        <p class="where"> <%= t('pages.home.where') %> </p>

<!--         <div> -->
          <%= simple_form_for :location, url: :nomads_around, method: :get do |f| %>
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <span class="form-container-home">
                <%= f.input :location, label: false, placeholder: t('pages.home.form_placeholder'), class: 'form-input' %>
                <%= f.button :submit, t('pages.home.form_submit'), class: 'form-input' %>
              </span>
            </div>
          <% end %>
<!--         </div> -->

      </div>
    </div>
  </div>

<div class="custom-hr"></div>

<!-- VIEW 3 -->
  <div class="row">
    <div class="col-xs-12 no-padding">
      <div class="home-banner">
        <div class="col-xs-5 background-image hidden-xs box-shadow" style="background-image:
          url(<%= asset_path "landing.jpg" %>)"></div>

        <div class="col-xs-7 no-padding">
          <div class="home-text-container">
            <h2 class="home-title"> <%= t('pages.home.what_is_nomad') %> </h2>
            <p class="home-content"> <%= t('pages.home.what_is_nomad_text') %> </p>
            <p class="home-content"> <%= t('pages.home.what_is_nomad_text') %> </p>
            <p class="home-content"> <%= t('pages.home.what_is_nomad_text') %> </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="custom-hr"></div>
<!-- VIEW 4 -->
  <div class="row">
    <div class="col-xs-12 no-padding">
      <div class="home-banner">

        <div class="col-xs-7 no-padding">
          <div class="home-text-container">
            <p class="home-title"> <%= t('pages.home.features') %> </p>
            <p class="home-subtitle">GET NOTIFIED</p>
            <p class="home-content"> <%= t('pages.home.what_is_nomad_text') %> </p>
            <p class="home-subtitle">CHROME EXTENTION</p>
            <p class="home-content"> <%= t('pages.home.what_is_nomad_text') %> </p>
            <p class="home-subtitle">DIRECT MESSAGES</p>
            <p class="home-content"> <%= t('pages.home.what_is_nomad_text') %> </p>
          </div>
        </div>

        <div class="col-xs-5 background-image hidden-xs box-shadow" style="background-image:
          url(<%= asset_path "landing.jpg" %>)"></div>

      </div>
    </div>
  </div>

<!-- END OF CONTAINER FLUID -->
</div>


<!-- SCRIPT TYPED JS -->
<%= content_for :after_js do %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/1.1.4/typed.min.js"></script>
  <script>
    $(function(){
      $(".typed-js-element").typed({
        strings: (<%= raw @typed_js %>),
        typeSpeed: 40,
        startDelay: 0,
        backSpeed: 10,
        backDelay: 1000,
        loop: true,
        showCursor: false,
        contentType: 'text'
      });
    });
  </script>
<% end %>
