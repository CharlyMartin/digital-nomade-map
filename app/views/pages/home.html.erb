<!-- SCRIPT TYPED JS -->
<%= content_for :after_js do %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/1.1.4/typed.min.js"></script>
  <script>
    $(function(){
      $(".typed-js-element").typed({
        strings: (<%= raw @typed_js %>),
        typeSpeed: 40,
        backSpeed: 20,
        backDelay: 2000,
        loop: true,
        showCursor: false,
        contentType: 'html'
      });
    });
  </script>
<% end %>
